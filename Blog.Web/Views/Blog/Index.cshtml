@{
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

@model List<Blog.Core.Blogs.BlogPost>
<section id="content">
    <section class="vbox">
        <section class="scrollable wrapper-lg">
            <div class="row">
                <div class="col-sm-9">
                    <h2 class="font-thin m-b">
                        博客 <span class="musicbar animate inline m-l-sm" style="width:20px;height:20px">
                            <span class="bar1 a1 bg-primary lter"></span>
                            <span class="bar2 a2 bg-info lt"></span>
                            <span class="bar3 a3 bg-success"></span>
                            <span class="bar4 a4 bg-warning dk"></span>
                            <span class="bar5 a5 bg-danger dker"></span>
                        </span>
                    </h2>
                    <!-- 博客内容 -->
                    <div class="blog-post">

                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <div class="post-item">
                                    <div class="caption wrapper-lg">
                                        <h2 class="post-title"><a href="/note/@item.Id">@item.Tittle</a></h2>
                                        <div>
                                            @if (!string.IsNullOrEmpty(item.KeyWord))
                                            {
                                                foreach (var key in item.KeyWord.Split(','))
                                                {
                                                <span class="label label-info">@key</span>
                                                }
                                            }
                                            @*<span class="label label-primary">Primary</span>
        <span class="label label-success">Success</span>
        <span class="label label-info">Info</span>
        <span class="label label-warning">Warning</span>
    <span class="label label-danger">MVC</span>*@
                                        </div>
                                        <br />
                                        <div class="post-sum">
                                            <p>
                                                @Html.Raw(item.CommentText.Length > 400 ? item.CommentText.Substring(0, 400) + "..." : item.CommentText)
                                            </p>
                                        </div>
                                        <div class="line line-lg"></div>
                                        <div class="text-muted">
                                            <i class="glyphicon glyphicon-user"></i> by <a href="#" class="m-r-sm">@item.Customer.Username</a>
                                            <i class="glyphicon glyphicon-time"></i> @item.CreatedTime
                                            <a href="#" class="m-l-sm"><i class="glyphicon glyphicon-send"></i> @item.Comments.Count 评论</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }



                    </div>
                    <!-- 分页 -->
                    <div class="text-center m-t-lg m-b-lg">
                        <ul class="pagination pagination-md">
                            <li><a href="#"><i class="glyphicon glyphicon-chevron-left"></i></a></li>
                            <li class="active"><a href="#">1</a></li>
                            @*<li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>*@
                            <li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i></a></li>
                        </ul>
                    </div>
                </div>
                <!-- 右侧分类 -->
                @Html.Action("Category")

            </div>
        </section>
    </section>
    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen,open" data-target="#nav,html"></a>
</section>

